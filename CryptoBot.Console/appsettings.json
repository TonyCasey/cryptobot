{
  "ConnectionStrings": {
    "DBConnectionString": "Data Source=.;Initial Catalog=CryptoBot_Dev;Integrated Security=true"
  },
  "NLog": {
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "D:/Logs/CryptoBot/Debug/${shortdate}.log",
        "layout": "${longdate} ${message}"
      },
      "console": {
        "type": "Console",
        "layout": "${message}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile,console"
      }
    ]
  }
}